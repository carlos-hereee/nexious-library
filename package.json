{
  "name": "nexious-library",
  "version": "1.0.5",
  "description": "Official database for nexious.tech",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node src/index.ts",
    "build": "del .\\lib\\* -y && npx prettier --write src/ && npm run build:esm && npm run build:cjs",
    "build:mac": "rm -rf lib/ && npx prettier --write src/ && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir lib/cjs",
    "watch": "tsc -p tsconfig.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlos-hereee/nexious-library.git"
  },
  "files": [
    "lib"
  ],
  "author": "carlos-hereee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlos-hereee/nexious-library/issues"
  },
  "homepage": "https://github.com/carlos-hereee/nexious-library#readme",
  "devDependencies": {
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "typescript": "^5.1.3"
  }
}