{
  "name": "nexious-library",
  "version": "1.1.4",
  "description": "Official database for nexious.tech",
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "types": "dist/cjs/main.d.ts",
  "sass": "src/stylesheets/index.scss",
  "style": "dist/index.css",
  "homepage": "https://github.com/carlos-hereee/nexious-library#readme",
  "author": "carlos-hereee <97hernandez.c@gmail.com>(https://www.nexious.tech)",
  "license": "MIT",
  "exports": {
    ".": "./dist/cjs/main",
    "./atom": "./dist/cjs/atom"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end"
  ],
  "scripts": {
    "watch": "tsc -p tsconfig.json --watch",
    "prettier": "npx prettier --write src/",
    "clean": "rimraf dist/ && npm run prettier",
    "dev": "npm run build && npm run watch",
    "sass": "npx sass --no-source-map src/stylesheets",
    "copy:ejs": "copyfiles -u 1 src/**/*.html src/**/*.css dist/esm",
    "copy:cjs": "copyfiles -u 1 src/**/*.html src/**/*.css dist/cjs",
    "sass:watch": "npx sass --watch src/stylesheets",
    "sass:build": "npm run sass && npm run copy:ejs && npm run copy:cjs",
    "compile": "tsc && tsc --module CommonJS --outDir dist/cjs",
    "build": "npm run clean && npm run compile && npm run sass:build",
    "build:mac": "npm run clean:mac && npm run sass:build",
    "test": "npm run build && node ./dist/cjs/main.js",
    "release:patch": "npm run build && npm version patch && npm publish",
    "release:minor": "npm run build && npm version minor && npm publish",
    "release:major": "npm run build && npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlos-hereee/nexious-library.git"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/carlos-hereee/nexious-library/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "copyfiles": "^2.4.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "rimraf": "^5.0.1",
    "sass": "^1.62.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0"
  }
}
