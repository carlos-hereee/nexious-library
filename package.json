{
  "name": "nexious-library",
  "version": "1.1.12",
  "description": "Official database for nexious.tech",
  "main": "./dist/cjs/main.cjs",
  "type": "module",
  "module": "./dist/esm/main.js",
  "types": "./src/cjs/main.d.ts",
  "sass": "src/stylesheets/index.scss",
  "style": "dist/index.css",
  "homepage": "https://github.com/carlos-hereee/nexious-library#readme",
  "author": "carlos-hereee <97hernandez.c@gmail.com>(https://www.nexious.tech)",
  "license": "MIT",
  "bin": {
    "rename": "rename.sh"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "react",
    "react-vite"
  ],
  "scripts": {
    "watch": "tsc -p tsconfig.json --watch",
    "dev": "npm run build && npm run watch",
    "dev:ts-node": "ts-node -r tsconfig-paths/register -r src/main.tsx",
    "dev:webpack": "webpack-dev-server",
    "sass": "npx sass src/stylesheets && npm run copy:esm && npm run copy:cjs",
    "sass:watch": "npx sass --watch src/stylesheets",
    "copy:esm": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.scss dist/esm",
    "copy:cjs": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.scss dist/cjs",
    "copy-styles:esm": "node --loader ts-node/esm .copy-styles.ts",
    "copy-styles:cjs": "node --loader ts-node/cjs .copy-styles.ts",
    "prettier": "npx prettier --write src/",
    "clean": "rimraf dist/ && npm run prettier",
    "compile": "tsc && tsc --module commonjs --outDir dist/cjs",
    "build": "npm run clean && npm run compile && npm run sass",
    "build:webpack": "webpack",
    "build:mac": "npm run clean:mac && npm run sass:build",
    "test": "npm run build && npm link",
    "release:patch": "npm unlink && npm run build && npm version patch && npm publish",
    "release:minor": "npm unlink && npm run build && npm version minor && npm publish",
    "release:major": "npm unlink && npm run build && npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlos-hereee/nexious-library.git"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/carlos-hereee/nexious-library/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "rimraf": "^5.0.1",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "webpack": "^5.86.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "peerDependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0"
  }
}